{
  "name": "@superstream/core",
  "author": "Garvit Pahal <g10pahal@gmail.com>",
  "repository": "https://github.com/superstream-finance/superstream",
  "homepage": "https://superstream.finance/",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "list-keys": "anchor keys list",
    "clean": "run-p clean:**",
    "clean:anchor": "anchor clean && rimraf .anchor/",
    "clean:sdk:ts": "pnpm --dir sdkx/ts/ clean",
    "clean:sdk:ts-gen": "rimraf client-sdks/ts/src/gen/",
    "build": "run-s build:**",
    "build:anchor": "anchor build -p superstream",
    "build:copy": "mkdir -p client-sdks/ts/src/gen && run-p copy:**",
    "build:inspector": "pnpm --dir inspector/ build",
    "build:sdk:ts": "pnpm --dir client-sdks/ts/ build",
    "deploy:anchor:localnet": "pnpm build:anchor && anchor deploy --provider.cluster localnet",
    "deploy:anchor:devnet": "pnpm build:anchor && anchor deploy --provider.cluster devnet",
    "deploy:anchor:testnet": "pnpm build:anchor && anchor deploy --provider.cluster testnet",
    "test": "anchor test",
    "copy:idl": "cp target/idl/superstream.json client-sdks/ts/src/gen/idl.json",
    "copy:types": "cp target/types/superstream.ts client-sdks/ts/src/gen/types.ts",
    "lint-staged": "lint-staged --config lint-staged.lint.js",
    "lint": "run-p lint:**",
    "lint:anchor": "cargo fmt -- --check",
    "lint:eslint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "fix-staged": "lint-staged --config lint-staged.fix.js",
    "fix": "run-p fix:**",
    "fix:anchor": "cargo fmt",
    "fix:eslint": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix"
  },
  "devDependencies": {
    "@project-serum/anchor": "^0.25.0",
    "@solana/spl-token": "^0.3.4",
    "@solana/web3.js": "^1.59.1",
    "@types/chai": "^4.3.3",
    "@types/keccak": "^3.0.1",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "assert": "^2.0.0",
    "chai": "^4.3.6",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.6.4",
    "husky": "^8.0.1",
    "js-sha256": "^0.9.0",
    "keccak": "^3.0.2",
    "keccak256": "^1.0.6",
    "lint-staged": "^13.0.3",
    "merkletreejs": "^0.2.31",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-mocha": "^10.0.0",
    "tsc-files": "^1.1.3",
    "typescript": "^4.8.2"
  }
}
